echo parando o tomcat, caso ele esteja em execução
./apache-tomcat-7.0.32/bin/shutdown.sh 

echo apagando os arquivos existentes...
echo rm apache-tomcat-7.0.32/webapps/globo.war 
rm apache-tomcat-7.0.32/webapps/globo.war 
echo rm apache-tomcat-7.0.32/webapps/globo
rm -r apache-tomcat-7.0.32/webapps/globo

echo gerando o war da aplicação
cd globo../apache-maven-3.0.4/bin/mvn package
../apache-maven-3.0.4/bin/mvn package
echo copiando o war para o tomcat
mv target/globo.war ../apache-tomcat-7.0.32/webapps/





